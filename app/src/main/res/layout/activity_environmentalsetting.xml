<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/environmentalsetting"
        android:textSize="40sp"
        android:gravity="center"/>

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="65dp"
        android:textColor="@color/background"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/volumesetting"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="@string/volumesetting"
        android:textSize="30sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/volumesetting"
        android:text="@string/plus"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/minus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/plus"
        android:text="@string/minus"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/rotatesetting"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/volumesetting"
        android:layout_marginLeft="270dp"
        android:gravity="center"
        android:text="@string/rotatesetting"
        android:textSize="30sp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/volumesetting"
        android:layout_toRightOf="@id/rotatesetting"
        android:text="@string/left"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/volumesetting"
        android:layout_toRightOf="@id/left"
        android:text="@string/plus"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/volumesetting"
        android:layout_toRightOf="@id/up"
        android:text="@string/minus"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/volumesetting"
        android:layout_toRightOf="@id/down"
        android:text="@string/right"
        android:textSize="30sp"
        android:gravity="center"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <Button
        android:id="@+id/finish"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:text="@string/appfinish"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

<!--    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:text="@string/back"
        android:textSize="40sp"
        tools:ignore="RtlHardcoded" />-->

    <Button
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="70dp"
        android:text="@string/back"
        android:textSize="25sp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/browser"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:text="Y"
        android:textColor="@color/attention"
        android:textSize="40sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>